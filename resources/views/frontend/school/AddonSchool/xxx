    <script>
        function showModal(id) {

            //console.log(addoncheckoutinfo);

            $.ajax({
                url: '/Addon/Checkout/School',
                type: "POST",
                data: {
                    "_token": "{{ csrf_token() }}",
                    addon_package_id: id
                },
                success: function(response) {
                    console.log(response);
                    // update modal content
                    $('#myModal .modal-body').html(response);
                    // show modal
                    $('#myModal').modal('show');
                },
                error: function(error) {
                    console.log(error);
                }
            });
        }
    </script>
